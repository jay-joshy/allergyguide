	journal = {Allergy Asthma Clin Immunol},
	author = {Bégin, P. and Chan, E. S. and Kim, H. and Wagner, M. and Cellier, M. S. and Favron-Godbout, C. and Abrams, E. M. and Ben-Shoshan, M. and Cameron, S. B. and Carr, S. and Fischer, D. and Haynes, A. and Kapur, S. and Primeau, M. N. and Upton, J. and Vander Leek, T. K. and Goetghebeur, M. M.},
